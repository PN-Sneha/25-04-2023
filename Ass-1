#include<stdio.h>
int main()
{
	char str[100];
	int i;
	int lwr=0,spl=0;
	printf("Enter the string:\n");
	gets(str);
	for(i=0;str[i]!='\0';i++){
	if(str[i]>='a'&&str[i]<='z'){
		lwr++;
	}
	else{
		spl++;
	}
    }
    printf("\nLower Case Letters:%d",lwr);
    printf("\nSpeacial Characters:%d",spl);
}
